<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="com.android.alarm.permission.SET_ALARM" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM" />
    <uses-permission android:name="android.permission.USE_EXACT_ALARM" />

    <uses-permission android:name="android.permission.CALL_PHONE"/>
    <uses-feature android:name="android.hardware.telephony" android:required="false" />


    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Application_team3"
        tools:targetApi="31">
        <activity
            android:name=".MealHistoryActivity"
            android:exported="false" />
        <activity
            android:name=".PersonalInfoActivity"
            android:exported="false" />
        <activity
            android:name=".CalenderOverviewCaregiver"
            android:exported="false" />
        <activity
            android:name=".LoginElderly"
            android:exported="false" />
        <activity
            android:name=".SignupElderly"
            android:exported="false" />
        <activity
            android:name=".CaregiverElderlyPageActivity"
            android:exported="false" />
        <activity
            android:name=".MealRegister"
            android:exported="false" />
        <activity
            android:name=".ElderlyScheduler"
            android:exported="false" />
        <activity
            android:name=".CaregiverDash"
            android:exported="false" />
        <activity
            android:name=".SignupCaregiver"
            android:exported="false" />
        <activity
            android:name=".LoginCaregiver"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:configChanges="locale|orientation">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver
            android:name=".AlarmReceiver"
            android:enabled="true"
            android:exported="false">
            <intent-filter>
                <action android:name="RUN_FUNCTION_ACTION_CAREGIVER" />
                <action android:name="RUN_FUNCTION_ACTION_ELDERLY" />
                <action android:name="RUN_FUNCTION_COPY_MEAL" />
                <action android:name="MEAL_ACTION" />
            </intent-filter>
        </receiver>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>